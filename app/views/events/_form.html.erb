

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title,class:""%>
<!--     <div class="col-sm-10"> -->
      <%= f.text_field :title,class:"form-control" %>
    <!-- </div>     -->
  </div>
  <div class="form-group">
    <%= f.label :start_date,class:"" %>
    <%= f.datetime_select :start_date,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :end_date,class:"" %>
    <%= f.datetime_select :end_date,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :location,class:"" %><br>
    <%= f.text_field :location,class:"form-control"%>
  </div>
  <div class="form-group">
      <%= f.label :all_tags, "List ALL TAGS, separate each tag by a comma",class:"" %>
      <%= f.text_field :all_tags,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :agenda,class:"" %><br>
    <%= f.text_area :agenda,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address,class:"" %><br>
    <%= f.text_area :address,class:"form-control" %>
  </div>
